
<header class="header__wrapper">
    <h1><a class="nav__tittle" href="{{ path('home') }}">Calendar</a></h1>
    <nav>
        <ul class="nav__list">
            {% if auth.check %}
                <li>
                    <a class="nav__link" href="{{ path('reservation') }}">Create reservation</a>
                </li>
                <li>
                    <a class="nav__link" href="#"
                       onclick="event.preventDefault(); document.getElementById('logout').submit()">
                        Logout
                    </a>
                </li>
                <li class="nav__name">
                    <span>{{ auth.user.name }}</span>
                    <img src="{{ auth.user.image }}" alt="User profile picture" width="80" height="80">
                </li>
            {% else %}
                <li>
                    <a class="nav__link" href="{{ path('login') }}">Login</a>
                </li>
                <li>
                    <a class="nav__link" href="{{ path('register') }}">Register</a>
                </li>
            {% endif %}
        </ul>
    </nav>

    <form action="{{ path('logout') }}" method="POST" class="hidden" id="logout">
        <input type="hidden" name="{{ constant('SESSION_KEY', csrf) }}" value="{{ csrf.token }}">
    </form>
</header>